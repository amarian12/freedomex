<%= form_tag change_password_path, method: :put do %> <%#= devise_error_messages! %>
  <%= label_tag :current_password, 'Old Password' %> <%= password_field_tag "member[old_password]", nil, autocomplete: 'off', class: "px-1 form-control form-control-lg underlined", placeholder: 'Enter old password' %>
<%= label_tag :password, 'New password' %> <%= password_field_tag "member[new_password]", nil, autocomplete: 'off', class: "px-1 form-control form-control-lg underlined", placeholder: 'Enter new password' %>
<%= label_tag :password_confirmation %> <%= password_field_tag "member[password_confirmation]", nil, autocomplete: 'off', class: "px-1 form-control form-control-lg underlined", placeholder: 'Enter new password' %>
<%= submit_tag "CHANGE", class: "btn btn-primary", id: "change_pwd"%>
<% end %>

