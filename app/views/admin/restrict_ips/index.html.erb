<div class="row">

  <div class="col-md-3">
    <h3>Whitelisted Ips</h3>
  </div>


  <div class="col-3">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#whitelisted-ips">Admin Access Whitelisted Ip</button>
  </div>
</div>

<div class="card">
  <%= table_for @restrictIps, class: 'table table-condensed table-striped' do |t| %>

    <% t.column 'Admin Access Whitelisted Ip' do |x| %>
      <%= x.whitelisted_ip rescue nil %>
    <% end %>

    <% t.column 'Created At' do |x| %>
      <%= x.created_at rescue nil %>
    <% end %>

    <% t.column 'Action' do |x| %>
      <%= link_to "Edit", edit_admin_restrict_ip_path(x), class: "btn btn-sm btn-primary"%>
      <%= link_to "Delete", admin_restrict_ip_path(x), method: :delete, class: "btn btn-sm btn-danger"%>
    <% end %>
  <% end %>
</div>

<div class="modal fade" id="specific-ip-address">
  <div class="modal-dialog">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Add Specific Ip Address</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <!-- Modal body -->
      <div class="modal-body">

      </div>
      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>

<div class="modal fade" id="ip-address-range">
  <div class="modal-dialog">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Add Ip Address Range</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <!-- Modal body -->

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="whitelisted-ips">
  <div class="modal-dialog">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Admin Access Whitelisted Ip</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <!-- Modal body -->
      <div class="modal-body">
        <%= form_tag whitelisted_ip_admin_restrict_ips_path do %>

          <div class="form-group">
            <label>Whitelisted Ip Address</label>
            <%= text_field_tag :admin_whitelisted_ip, nil, class: "form-control", placeholder: "Enter Whitelisted Ip Address" %>
          </div>

          <div class="form-group">
            <%= submit_tag "submit", class: "btn-primary btn btn-md" %>
          </div>

        <%end%>
      </div>
      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>
