<main ng-app="dashboard">
  <% if current_user%>
    <%= render 'shared/new_header' %>
  <%end%>
  <!-- Spotlight -->
  <section class="slice slice-lg bg-cover bg-size--cover" data-separator="rounded-continuous" data-separator-bg="secondary">
    <div class="container">
      <div class="row row-grid justify-content-around align-items-center">
        <div class="col-lg-6">
          <div class="text-center">
            <div><img src="/assets/freedomex-logo.gif" width="200"></div>
            <center><img src="/assets/freedom.png"></center>
            <% unless current_user %>
              <% provider = ENV['OAUTH2_SIGN_IN_PROVIDER'] %>
              <% unless provider.blank? %>
                <div class="mt-5">
                  <center><img src="/assets/login-button-dot.png"></center>
                  <a class="signin-btn" href="/auth/<%= provider == 'google' ? 'google_oauth2' : provider %>" role="button">
                    Login
                    <%#= t("header.sign_in_with_#{provider}") %>
                  </a></br></br>
                  <%= link_to "Signup",ENV.fetch('BARONG_DOMAIN')+ ENV.fetch('BARONG_SIGNUP_PATH'), :class=> "signin-btn signup"%>

                </div>
              <% end %>
            <% else %>
            <div class="mt-3">
              <a  class="login-btn-2" href="<%= settings_path %>" role="button">
                <i class="fa fa-user profile-icon"></i>
              <%#= t('header.settings') %><%=current_user.email%></a>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    </div>
  </section>
  <dashboard></dashboard>
</main>
