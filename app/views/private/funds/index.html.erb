<!-- <h1 class="page-title"><%#= t('header.funds') %></h1> -->
<section class="bg-cover bg-size--cover" data-separator="rounded-continuous" data-separator-bg="secondary">
    <div class="container">
      <div class="row row-grid justify-content-around align-items-center">
        <div class="col-lg-6">
          <div class="pt-lg-md text-center">
            <center><img src="/assets/freedom.png"></center>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <center>
            <ul>
              <li class="nav-item dropdown languages-icon">
                <a class="nav-link dropdown-toggle">
                  <img src="/assets/<%= I18n.locale %>.png"/>
                </a>
                <div id="languages" class="dropdown-menu">
                  <% I18n.available_locales.each do |lang| %>
                    <a class="dropdown-item" href="?lang=<%= lang %>">
                      <img src="/assets/<%= lang || I18n.locale %>.png"/>
                    </a>
                  <% end %>
                </div>
              </li>
            </ul>
          </center>
        </div>
        <div class="col-md-6">
          <div class="user-profile">
            <div class="profile-box"><img src="/assets/placeholder-male-square.png"></div>
            <center>
              <a class="login-btn-2" role="button">
                <span class ="user-email"><%= current_user.email %></span>
              </a>
            </center>
            <div class="funds-box">
              <h1>My Funds</h1>
              <h4>Total Value</h4>
              <!-- <p>Crypto: <span>B 17-7102 ($108,507,33)</span></p> -->
              <p>Flat: <span>$<%=current_user.accounts.where(:currency_id=>"usd")[0].balance%></span></p>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="setting-box">
            <a href="<%= settings_path %>">
              <img src="/assets/setting-icon.png" width="100">
              <p>Account Setting</p>
              <p><span>2fa Authentification</span><span class="green-dot"><img src="assets/serverstatus-green.png"></span></p>
            </a>
          </div>
        </div>
      </div>
         <accounts></accounts>
        <!-- </div> -->
      <!-- </div> -->
    </div>
  </section>

<% content_for :scripts do %>
  <script type="text/javascript" charset="utf-8">
    $(window).load(function(){
      $.ajax({
        type: "post",
        url: "<%= gen_address_funds_path %>"
      })
    });
  </script>
<% end %>
